<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.Dialog.SelectCityActivity">

    <TextView
        android:id="@+id/txtToolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:text="انتخاب شهر"
        android:textColor="@color/mainColor"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtToolbarTitle"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/textfield_activated_holo_light"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:gravity="right|center_vertical"
        android:hint="جستوجوی شهر ..."
        android:imeOptions="actionSend|flagNoEnterAction"
        android:inputType="textPersonName"
        android:paddingRight="8dp"
        android:textColor="@color/editTextColor"
        android:textSize="14sp"/>

    <ListView
        android:id="@+id/lstCities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edtSearch"></ListView>

</RelativeLayout>
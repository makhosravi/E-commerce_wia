<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crdRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemPostSize2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgPic"
            android:orientation="vertical"
            android:weightSum="100"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="79"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="0dp"
                >

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="کاشی فله بسیار سالم و تمیز کارخانه نیلوفر"
                    android:textColor="#262626"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="دقایقی پیش"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="#d6d6d6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="100"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:tint="@color/textColor"
                    app:srcCompat="@drawable/ic_clear"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:tint="@color/textColor"
                    app:srcCompat="@drawable/ic_share"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgPerson"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:tint="@color/textColor"
                    app:srcCompat="@drawable/ic_person"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPic"
            android:layout_width="@dimen/itemPostSize2"
            android:layout_height="@dimen/itemPostSize2"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_post_no_image"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <wiadevelopers.com.library.MaterialLoading.MaterialProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/itemLoadingProgressHeight"
        android:layout_height="@dimen/itemLoadingProgressHeight"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="true"
        app:mpb_indeterminateTint="@color/mainColor"/>

</LinearLayout>